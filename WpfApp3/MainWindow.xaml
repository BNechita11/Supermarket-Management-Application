<Window x:Class="WpfApp3.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="300" Width="350"
        Background="#FFF7F3F7">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Nume utilizator:" Foreground="#FF555555" FontSize="14"/>
            <TextBox x:Name="txtNumeUtilizator" Height="30" Margin="0,5,0,10" FontSize="14"/>
            <Label Content="Parolă:" Foreground="#FF555555" FontSize="14"/>
            <PasswordBox x:Name="txtParola" Height="30" Margin="0,5,0,10" FontSize="14"/>
            <Button Content="Autentificare" Click="Autentificare_Click" Background="#FFFD79A6" Foreground="White" FontWeight="Bold" FontSize="16" Padding="10"/>
        </StackPanel>
    </Grid>
</Window>
